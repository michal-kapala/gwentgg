package common

css InputGroup() {
	display: flex;
	justify-content: center;
	align-items: center;
	gap: 10px;
	width: 100%;
}

css Label() {
	font-size: 16px;
	text-align: right;
	width: 10%;
}

css Input() {
	margin: 0.5rem 0.5rem;
	padding: 6px 8px;
	font-size: 16px;
	width: 20%;
	background-color: #ddd;
	border-radius: 10px;
	border: none;
	box-shadow: none;
}
